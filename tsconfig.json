{
  "compilerOptions": {
    "declaration": true,
    "outDir": "lib",
    "emitDeclarationOnly": true,

    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2016"],
    "module": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2015",

    "strict": true
  },
  "include": ["./src/**/*.ts", "./scripts/**/*.ts", "./src/__tests__/**/*.ts", "./index.ts", "./config.ts"],
  "exclude": ["./node_modules/**/*", "./lib/**/*"]
}
